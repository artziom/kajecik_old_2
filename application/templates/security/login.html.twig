{% extends 'base.html.twig' %}

{% block cardTitle %}Login{% endblock %}

{% block cardBody %}
    <form action="{{ path('app_login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <div>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            </div>
        {% endif %}
        <div class="mb-3">
            <label for="username" class="form-label">{% trans %}label.username{% endtrans %}</label>
            <input type="text" class="form-control" id="username" name="_username"
                   value="{{ lastUsername }}">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">{% trans %}label.password{% endtrans %}</label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
            <label class="form-check-label" for="rememberMe">{% trans %}label.remember_me{% endtrans %}</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-primary">{% trans %}label.login{% endtrans %}</button>
    </form>
{% endblock %}
